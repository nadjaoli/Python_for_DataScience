## Conditions ##
Example: Know if you are able to drive or not

age = 20
def verify_you_can_drive(age):
  if age >= 18:
    print("Have permission to drive!")
  else:
    print("Don't have permission to drive!")
verify_you_can_drive(age)
    
def verify_if_you_can_drive_without_parameters():
  age = input('What is your age?')
  age = int(age)
  if age >= 18:
    print('Have permission to drive!')
  else:
    print('Dont have permission to drive!')

verify_if_you_can_drive_without_parameters()

